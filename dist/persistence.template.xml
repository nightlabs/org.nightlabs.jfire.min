<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="JFire">
        <properties>
            <property name="javax.jdo.option.ConnectionFactoryName" value="${datasourceJNDIName_absolute_xa}"/>
            <property name="javax.jdo.option.ConnectionFactory2Name" value="${datasourceJNDIName_absolute_noTx}"/>

            <property name="org.datanucleus.storeManagerType" value="rdbms"/>

            <property name="org.datanucleus.NontransactionalRead" value="true"/>

            <property name="org.datanucleus.autoCreateSchema" value="true"/>
            <property name="org.datanucleus.autoCreateTables" value="true"/>
            <property name="org.datanucleus.autoCreateColumns" value="true"/>
            <property name="org.datanucleus.autoCreateConstraints" value="true"/>

            <property name="org.datanucleus.autoStartMechanism" value="XML"/>
            <property name="org.datanucleus.autoStartMechanismXmlFile" value="${deploymentDescriptorDirectory}/datanucleus-auto-start.xml"/>

<!-- TODO this property needs to be set, but I don't know yet how - it's not mentioned on http://www.datanucleus.org/docs/1_2/persistence_properties.html or http://www.datanucleus.org/docs/1_2/jdo/pmf.html
  <config-property name="StringDefaultLength" type="int">255</config-property>
-->
            <property name="org.datanucleus.cache.level2" value="true"/>
            <property name="org.datanucleus.persistenceByReachabilityAtCommit" value="false"/>
        </properties>
    </persistence-unit>

</persistence>