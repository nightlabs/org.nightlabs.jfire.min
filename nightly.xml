    <provides path="org.nightlabs.jfire.base" location="org.nightlabs.jfire.base/lib/JFireRemoteClassLoader.jar"/>
    <provides path="org.nightlabs.jfire.base" location="org.nightlabs.jfire.base/lib/JFireRCLBackend.jar"/>
    <provides path="org.nightlabs.jfire.base" location="org.nightlabs.jfire.base/lib/JFireRCLBackendBean.jar"/>
    <publishes description="..." location="org.nightlabs.jfire.base/dist/org.nightlabs.jfire.base_1.0.0.tar.gz"/>
    <javadoc path="org.nightlabs.jfire.base/src"/>
  </project>

</nightlybuild>
