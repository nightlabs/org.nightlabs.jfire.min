<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>org.nightlabs.jfire.parent</artifactId>
		<groupId>org.nightlabs.jfire</groupId>
		<version>1.2.0-SNAPSHOT</version>
	</parent>
	<groupId>org.nightlabs.jfire</groupId>
	<artifactId>org.nightlabs.jfire.min.assembly</artifactId>
	<version>1.2.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<dependencies>
		<dependency>
			<groupId>org.jboss.jbossas</groupId>
			<artifactId>jboss-as-dist</artifactId>
			<version>4.2.3.GA</version>
			<type>zip</type>
		</dependency>

		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.server.data.dir.jboss</artifactId>
			<type>sar</type>
		</dependency>
		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.unifiedejbjndi.jboss</artifactId>
			<type>sar</type>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.web.admin</artifactId>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.base.ear</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.initialisejdo.ear</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.jboss.ear</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.query.store.ear</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.testsuite.ear</artifactId>
			<type>ear</type>
		</dependency>

		<dependency>
			<groupId>org.datanucleus</groupId>
			<artifactId>datanucleus-jca</artifactId>
			<type>rar</type>
		</dependency>

		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.jboss.ejb3</artifactId>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.log4j</artifactId>
		</dependency>
	</dependencies>

	<properties>
		<assembly.directory>${project.build.directory}/assembly</assembly.directory>
		<jboss.subdirectory>jboss-4.2.3.GA</jboss.subdirectory>
		<assembly.jboss.directory>${assembly.directory}/${jboss.subdirectory}</assembly.jboss.directory>
		<assembly.deploy.directory>${assembly.jboss.directory}/server/default/deploy</assembly.deploy.directory>
		<assembly.lib.directory>${assembly.jboss.directory}/server/default/lib</assembly.lib.directory>
		<assembly.jfire.deploy.directory>${assembly.deploy.directory}/JFire.last</assembly.jfire.deploy.directory>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-jboss</id>
						<phase>package</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${assembly.directory}</outputDirectory>
							<includeGroupIds>org.jboss.jbossas</includeGroupIds>
							<includeArtifactIds>jboss-as-dist</includeArtifactIds>
							<excludes>${jboss.subdirectory}/server/all/**,${jboss.subdirectory}/server/minimal/**</excludes>
						</configuration>
					</execution>
					<execution>
						<id>copy-deploy</id>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${assembly.deploy.directory}</outputDirectory>
							<!-- <includeGroupIds>org.nightlabs,org.nightlabs.jfire,org.datanucleus</includeGroupIds> -->
							<includeTypes>sar,war,rar</includeTypes>
							<stripVersion>true</stripVersion>
						</configuration>
					</execution>
					<execution>
						<id>copy-lib</id>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${assembly.lib.directory}</outputDirectory>
							<includeTypes>jar</includeTypes>
							<stripVersion>true</stripVersion>
						</configuration>
					</execution>
					<execution>
						<id>copy-jfire-deploy</id>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${assembly.jfire.deploy.directory}</outputDirectory>
							<!-- <includeGroupIds>org.nightlabs,org.nightlabs.jfire</includeGroupIds> -->
							<includeTypes>ear</includeTypes>
							<stripVersion>true</stripVersion>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-ext</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<copy todir="${assembly.jboss.directory}" overwrite="true">
									<fileset dir="src/main/ext/jboss" includes="**/*" />
								</copy>
								<chmod dir="${assembly.jboss.directory}/bin" perm="+x"
									includes="**/*.sh" />
								<delete dir="${assembly.lib.directory}" includes="jboss-aspect-library.jar"/>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>