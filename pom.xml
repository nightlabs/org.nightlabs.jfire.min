<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.nightlabs.jfire.min.assembly.installer</artifactId>
	<packaging>pom</packaging>
	<name>${project.artifactId}</name>

	<parent>
		<groupId>org.nightlabs.jfire</groupId>
		<artifactId>org.nightlabs.jfire.parent</artifactId>
		<version>1.3.2</version>
		<relativePath>../org.nightlabs.jfire.parent/pom.xml</relativePath>
	</parent>

	<properties>
		<project.build.assemblyDirectory>${project.build.directory}/assembly</project.build.assemblyDirectory>
	</properties>

	<dependencies>
<!-- BEGIN JFire server -->
		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.min.assembly</artifactId>
			<type>zip</type>
			<classifier>bin</classifier>
			<scope>provided</scope>
<!--
			<exclusions>
				<exclusion>
					<!- According to http://jira.codehaus.org/browse/MNG-2315 this should 
						not be supported - but it is! There is a warning, but it excludes the transitive 
						dependencies as desired. Marco :-) ->
					<groupId>*</groupId>
					<artifactId>*</artifactId>
				</exclusion>
			</exclusions>
-->
		</dependency>
<!-- END JFire server -->

<!-- BEGIN org.nightlabs.installer -->
		<dependency>
			<groupId>org.nightlabs.installer</groupId>
			<artifactId>installer</artifactId>
			<version>1.0.5</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.installer</groupId>
			<artifactId>installer-extensions</artifactId>
			<version>1.0.3</version>
			<scope>provided</scope>
		</dependency>
<!-- END org.nightlabs.installer -->

<!-- BEGIN org.nightlabs -->
		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.config</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.nightlabs</groupId>
			<artifactId>org.nightlabs.util</artifactId>
			<scope>provided</scope>
		</dependency>
<!-- END org.nightlabs -->

<!-- BEGIN org.nightlabs.jfire -->
		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.base</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.base.bean</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.jboss</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.nightlabs.jfire</groupId>
			<artifactId>org.nightlabs.jfire.servermanager</artifactId>
			<scope>provided</scope>
		</dependency>
<!-- END org.nightlabs.jfire -->

<!-- BEGIN third-party -->
		<dependency>
			<groupId>javax.jdo</groupId>
			<artifactId>jdo-api</artifactId>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>1.2</version> <!-- TODO move to nightlabs main parent!!! -->
			<scope>provided</scope>
		</dependency>
<!-- END third-party -->
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>${project.build.sourceDirectory}</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/boot</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>

		<plugins>
			<!-- declare MANIFEST.MF for main/main.jar - (originally org.nightlabs.jfire.server.installer-${version}.jar) -->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.nightlabs.jfire.installer.InstallationManager</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<!-- add src/main/boot to source directories -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.7</version> <!-- TODO move to parent! -->
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/main/boot</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.assemblyDirectory}/lib</outputDirectory>
<!--							<excludeTransitive>true</excludeTransitive> -->
							<includeGroupIds>org.nightlabs.installer,commons-cli</includeGroupIds>
						</configuration>
					</execution>
					<execution>
						<id>copy-jboss</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.assemblyDirectory}</outputDirectory>
							<artifactItems>
								<artifactItem>
									<groupId>org.nightlabs.jfire</groupId>
									<artifactId>org.nightlabs.jfire.min.assembly</artifactId>
									<type>zip</type>
									<classifier>bin</classifier>
									<overWrite>true</overWrite>
									<!-- <outputDirectory>${project.build.assemblyDirectory}/jboss</outputDirectory>
									<destFileName>[ filename ]</destFileName> -->
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!--
				(1) copy org.nightlabs.jfire.server.installer-${version}.jar to target/assembly/main/main.jar
				(2) rename target/assembly/jfire-server to target/assembly/jboss - TODO try to avoid this in the long run!
			-->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<mkdir dir="${project.build.assemblyDirectory}/main" />
								<copy file="${project.build.directory}/${project.artifactId}-${project.version}.jar" tofile="${project.build.assemblyDirectory}/main/main.jar" />
<!--								<move file="${project.build.assemblyDirectory}/jfire-server" tofile="${project.build.assemblyDirectory}/jboss" /> -->
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>com.simontuffs.onejar.Boot</mainClass>
						</manifest>
					</archive>
<!--
					<archive>
						<manifest>
							<mainClass>org.nightlabs.installer.InstallationManager</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
-->
					<descriptors>
						<descriptor>src/main/assembly/one-jar.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>